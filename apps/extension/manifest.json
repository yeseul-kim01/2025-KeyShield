{
    "manifest_version": 3,
    "name": "KeyShield",
    "version": "0.1.0",
    "description": "Browser-first DLP: prevent secret leakage at paste-time with Zero Trust policy automation.",
    "icons": {
      "16": "assets/icon16.png",
      "48": "assets/icon18.png",
      "128": "assets/icon128.png"
    },
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["src/contentScript.js"],
        "run_at": "document_start"
      }
    ]
  }
  